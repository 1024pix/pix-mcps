{
  "name": "pix-mcps",
  "version": "1.0.0",
  "description": "Model Context Protocol servers for Pix developers",
  "type": "module",
  "private": true,
  "workspaces": [
    "servers/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,mjs,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,ts,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "clean": "rm -rf **/dist **/node_modules/.cache"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "anthropic",
    "claude",
    "pix",
    "developer-tools"
  ],
  "author": "Pix Team",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/node": "^20.17.6",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
